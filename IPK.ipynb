# ---------------------------
# Cohort Analysis: Export Retention & Churn CSVs
# ---------------------------

import pandas as pd

# Step 1: Load the cleaned dataset
df = pd.read_csv("Online_retail_Final.csv")

# Step 2: Ensure date columns are datetime
df['InvoiceDate'] = pd.to_datetime(df['InvoiceDate'])
df['InvoiceMonth_dt'] = pd.to_datetime(df['InvoiceMonth'])
df['CohortMonth_dt'] = pd.to_datetime(df['CohortMonth'])

# Step 3: Calculate CohortIndex (months since first purchase)
df['CohortIndex'] = ((df['InvoiceMonth_dt'].dt.year - df['CohortMonth_dt'].dt.year) * 12
                     + (df['InvoiceMonth_dt'].dt.month - df['CohortMonth_dt'].dt.month))

# Step 4: Aggregate active customers per cohort
cohort_data = df.groupby(['CohortMonth', 'CohortIndex'])['Customer ID'].nunique().reset_index()
cohort_data.rename(columns={'Customer ID': 'ActiveCustomers'}, inplace=True)

# Step 5: Calculate total customers per cohort (first month)
total_customers = cohort_data[cohort_data['CohortIndex'] == 0][['CohortMonth', 'ActiveCustomers']]
total_customers.rename(columns={'ActiveCustomers': 'TotalCustomers'}, inplace=True)

# Merge total customers back
cohort_data = cohort_data.merge(total_customers, on='CohortMonth')

# Step 6: Calculate Retention and Churn Rates
cohort_data['RetentionRate'] = cohort_data['ActiveCustomers'] / cohort_data['TotalCustomers']
cohort_data['ChurnRate'] = 1 - cohort_data['RetentionRate']

# ---------------------------
# Step 7: Prepare separate CSVs
# ---------------------------

# Retention CSV
retention_df = cohort_data[['CohortMonth', 'CohortIndex', 'RetentionRate']]
retention_df.to_csv("CohortMatrix_Retention.csv", index=False)

# Churn CSV
churn_df = cohort_data[['CohortMonth', 'CohortIndex', 'ChurnRate']]
churn_df.to_csv("CohortMatrix_Churn.csv", index=False)

# ---------------------------
# Step 8: Optional - print first rows to check
print("Retention CSV Preview:")
print(retention_df.head())

print("\nChurn CSV Preview:")
print(churn_df.head())
